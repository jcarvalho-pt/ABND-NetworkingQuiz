<resources xmlns:tools="http://schemas.android.com/tools">
   <!-- Base application theme. -->
   <style name="Theme.ABNDProject3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
      <!-- Primary brand color. -->
      <item name="colorPrimary">@color/teal_700</item>
      <item name="colorPrimaryVariant">@color/teal_200</item>
      <item name="colorOnPrimary">@color/white</item>
      <!-- Secondary brand color. -->
      <item name="colorSecondary">@color/black</item>
      <item name="colorSecondaryVariant">@color/teal_700</item>
      <item name="colorOnSecondary">@color/black</item>
      <!-- Status bar color. -->
      <item name="android:statusBarColor" tools:targetApi="l">@android:color/darker_gray</item>
      <!-- Customize your theme here. -->
   </style>
   <!-- Card style -->
   <style name="QuestionCard">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_margin">8dp</item>
      <item name="android:background">@color/white</item>
   </style>
   <!-- Question header style -->
   <style name="QuestionTextView">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textSize">16sp</item>
      <item name="android:fontFamily">sans-serif-light</item>
      <item name="android:padding">8dp</item>
      <item name="android:textColor">@color/black</item>
      <item name="android:textStyle">bold</item>
   </style>
   <!-- Question text style -->
   <style name="QuestionTextTextView">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textSize">14sp</item>
      <item name="android:textColor">#919191</item>
      <item name="android:paddingLeft">8dp</item>
      <item name="android:paddingRight">4dp</item>
   </style>
   <!-- Option checkbox type style -->
   <style name="OptionCheckbox">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_marginLeft">20dp</item>
      <item name="android:paddingLeft">8dp</item>
      <item name="android:textColor">@color/teal_700</item>
   </style>
   <!-- Option radio button type style -->
   <style name="OptionRadioButton">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_marginLeft">16dp</item>
      <item name="android:paddingLeft">8dp</item>
      <item name="android:textColor">@color/teal_700</item>
   </style>
   <!-- Footer card div style -->
   <style name="SeparatorView">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">1dp</item>
      <item name="android:layout_marginLeft">8dp</item>
      <item name="android:background">@android:color/darker_gray</item>
   </style>
   <!-- Grade text style -->
   <style name="GradingTextView">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:gravity">right</item>
      <item name="android:textStyle">italic</item>
      <item name="android:paddingRight">4dp</item>
   </style>
</resources>