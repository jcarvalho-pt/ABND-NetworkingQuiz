<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".MainActivity">

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#E9E9E9"
      android:orientation="vertical">

      <!-- Question 1 card -->
      <LinearLayout
         android:id="@+id/question1"
         style="@style/QuestionCard"
         android:orientation="vertical">

         <TextView
            android:id="@+id/lbl_qt1"
            style="@style/QuestionTextView"
            android:text="@string/str_question" />

         <TextView
            android:id="@+id/lbl_qt1_text"
            style="@style/QuestionTextTextView"
            android:text="@string/str_text1" />

         <CheckBox
            android:id="@+id/chk_opt1_1"
            style="@style/OptionCheckbox"
            android:text="@string/str_answer1_opt1" />

         <CheckBox
            android:id="@+id/chk_opt1_2"
            style="@style/OptionCheckbox"
            android:text="@string/str_answer1_opt2" />

         <CheckBox
            android:id="@+id/chk_opt1_3"
            style="@style/OptionCheckbox"
            android:text="@string/str_answer1_opt3" />

         <CheckBox
            android:id="@+id/chk_opt1_4"
            style="@style/OptionCheckbox"
            android:text="@string/str_answer1_opt4" />

         <View style="@style/SeparatorView" />

         <TextView
            android:id="@+id/lbl_qt1_points"
            style="@style/GradingTextView"
            android:text="@string/str_1point" />

      </LinearLayout>
      <!-- End of question 1 card -->

      <!-- Question 2 card -->
      <LinearLayout
         android:id="@+id/question2"
         style="@style/QuestionCard"
