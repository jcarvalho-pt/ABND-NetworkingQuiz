            android:id="@+id/lbl_qt2_text"
            style="@style/QuestionTextTextView"
            android:text="@string/str_text2" />

         <EditText
            android:id="@+id/txt_opt2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:hint="xxx.xxx.xxx.xxx"
            android:inputType="text"
            android:paddingRight="4dp" />

         <View style="@style/SeparatorView" />

         <TextView
            android:id="@+id/lbl_qt2_points"
            style="@style/GradingTextView"
            android:text="@string/str_2point" />
      </LinearLayout>
      <!-- End of question 2 card -->

